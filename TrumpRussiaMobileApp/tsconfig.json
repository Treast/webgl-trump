{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es2015",
        "jsx": "react",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types/",
            "./src/app/js/typings.d.ts"
        ]
    },
    "include": [
        "./src/js/**/*.ts",
        "./src/js/**/*.d.ts",
        "./src/js/**/*.js"
    ]
}